{
  // Options: https://babeljs.io/docs/en/babel-preset-env#options

  // environment specified via BABEL_ENV env var
  "env": {
    "build": {
      "presets": [
        ["@babel/preset-env", {
          "modules": false,
          "targets": {
            "browsers": [
              "last 1 version",
              "not dead",
              "> 0.2%",
              "maintained node versions"
            ]
          }
        }]
      ],
      "plugins": []
    },

    "test": {
      "presets": [
        ["@babel/preset-env", {
          "modules": "commonjs"
        }]
      ],
      "plugins": [
        "istanbul"
      ]
    }
  }
}
