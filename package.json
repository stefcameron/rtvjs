{
  "name": "rtvjs",
  "version": "4.1.0",
  "description": "Runtime Verification Library for browsers and Node.js.",
  "engines": {
    "node": ">=12"
  },
  "main": "dist/rtv.js",
  "module": "dist/rtv.esm.js",
  "sideEffects": false,
  "pre-commit": [
    "precommit:msg",
    "fmt:check",
    "lint",
    "docs",
    "precommit:docs"
  ],
  "scripts": {
    "precommit:msg": "echo 'Running pre-commit checks...'",
    "precommit:docs": "git add API.md",
    "clean:internals": "rm -rf ./dist_tools",
    "clean:lib": "rm -rf ./dist",
    "clean": "npm run clean:lib && npm run clean:internals",
    "start": "npm run build:lib && npm run node",
    "build:internals": "npm run clean:internals && rollup -c tools/rollup.internals.js",
    "build:lib": "npm run clean:lib && node ./tools/build/build.js",
    "build": "npm run build:lib",
    "docs": "jsdoc2md -f \"src/**/*.js\" -f \"src/**/*.jsdoc\" --heading-depth 1 > API.md",
    "fmt": "prettier --write \"{*,src/**/*,test/**/*,tools/**/*}.+(js|yml)\"",
    "fmt:check": "prettier --check \"{*,src/**/*,test/**/*,tools/**/*}.+(js|yml)\"",
    "lint": "eslint ./*.js \"src/**/*.{js,jsdoc}\" \"test/**/*.js\" \"tools/**/*.js\"",
    "report:coverage": "nyc report --reporter=text-lcov > ./coverage/coverage.lcov && codecov",
    "test:ci": "npm run test && npm run report:coverage",
    "test:unit:run": "BABEL_ENV=test NODE_ENV=production mocha -c -r mocha-setup.js",
    "test:unit": "npm run test:unit:run -- \"./test/**/*.test.js\"",
    "test:unit:watch": "npm run test:unit -- -w",
    "test:unit:debug": "npm run test:unit -- --inspect-brk",
    "test:coverage": "nyc npm run test:unit",
    "test": "npm run fmt:check && npm run lint && npm run test:coverage",
    "node": "echo \"\n!!! REMEMBER TO REBUILD IF NECESSARY !!!\n\n\" && node -r ./tools/node.js --inspect",
    "node:build": "npm run build:lib && npm run node",
    "node:internals": "npm run build:internals && node -r ./dist_tools/internals.js --inspect",
    "html": "npm run build:lib && npm run html:live",
    "html:live": "live-server --no-browser --mount=\"/dist:./dist\" ./tools",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "prepublish:checkdocs": "git diff HEAD --exit-code -- API.md",
    "prepublishOnly": "npm test && npm run build && npm run docs && npm run prepublish:checkdocs",
    "release:major": "npm version major -m \"Version %s release\" && npm publish",
    "release:minor": "npm version minor -m \"Version %s release\" && npm publish",
    "release:patch": "npm version patch -m \"Version %s release\" && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/stefcameron/rtvjs.git"
  },
  "keywords": [
    "javascript",
    "test",
    "runtime",
    "verify",
    "verification",
    "assertion",
    "type",
    "integration",
    "isomorphic"
  ],
  "author": {
    "name": "Stefan Cameron",
    "url": "https://twitter.com/stefcameron"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/stefcameron/rtvjs/issues"
  },
  "homepage": "https://gitlab.com/stefcameron/rtvjs#README",
  "files": [
    "API.md",
    "CHANGELOG.md",
    "LICENSE",
    "package.json",
    "README.md",
    "dist/"
  ],
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/plugin-transform-runtime": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/register": "^7.18.6",
    "@babel/runtime": "^7.18.6",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "babel-plugin-istanbul": "^6.1.1",
    "chai": "^4.3.6",
    "chokidar": "^3.5.3",
    "codecov": "^3.8.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "jsdoc-to-markdown": "^7.1.1",
    "live-server": "^1.1.0",
    "lodash": "^4.17.21",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.7.1",
    "rollup": "^2.77.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^14.0.0"
  }
}
