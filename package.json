{
  "name": "rtvjs",
  "version": "0.0.1",
  "description": "Runtime Type Verification Isomorphic JavaScript Library",
  "main": "dist/rtv.umd.js",
  "module": "dist/rtv.esm.js",
  "jsnext:main": "dist/rtv.esm.js",
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "include": [
      "src/**/*.js"
    ],
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "report-dir": "./coverage",
    "reporter": [
      "text",
      "text-summary",
      "html"
    ]
  },
  "scripts": {
    "clean": "rm -rf ./build",
    "start": "npm run build:lib && npm run node",
    "node": "node -r ./tools/node.js",
    "node:build": "npm run build:lib && npm run node",
    "build:docs": "jsdoc2md \"src/**/*.js\" > dist/rtv.js.md",
    "build:lib": "BABEL_ENV=build rollup -c",
    "build": "npm run clean && npm run build:lib && npm run build:docs",
    "lint": "eslint rollup.config.js \"src/**/*.js\" \"tools/**/*.js\"",
    "test:unit": "BABEL_ENV=test mocha -c -r mocha-setup.js \"./test/**/*.test.js\"",
    "test:unit:watch": "npm run test:unit -- -w",
    "test:unit:debug": "npm run test:unit -- --inspect-brk",
    "test:coverage": "nyc npm run test:unit",
    "test": "npm run lint && npm run test:coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/stefcameron/rtvjs.git"
  },
  "keywords": [
    "javascript",
    "test",
    "runtime",
    "verify",
    "verification",
    "assertion",
    "type",
    "integration",
    "isomorphic"
  ],
  "author": {
    "name": "Stefan Cameron",
    "url": "https://twitter.com/stefcameron"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/stefcameron/rtvjs/issues"
  },
  "homepage": "https://gitlab.com/stefcameron/rtvjs#README",
  "dependencies": {
    "lodash": "^4.17.5"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "jsdoc-to-markdown": "^4.0.1",
    "rollup": "^0.56.5",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.2.0",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "optionalDependencies": {
    "babel-plugin-istanbul": "^4.1.5",
    "chai": "^4.1.2",
    "eslint": "^4.18.2",
    "mocha": "^5.0.4",
    "nyc": "^11.6.0",
    "sinon": "^4.4.6"
  }
}
